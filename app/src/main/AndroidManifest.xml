<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="a404_notfound.sourceappwater">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controllers.WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.LoginActivity"
            android:label="Log in" />
        <activity
            android:name=".controllers.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".controllers.RegistrationActivity"
            android:label="Registration" />
        <activity android:name=".controllers.BaseActivity" />
        <activity android:name=".controllers.HqActivity" />
        <activity android:name=".controllers.EditInfoActivity" />
        <activity android:name=".controllers.DrawerActivity" />
        <activity android:name=".controllers.ReportsActivity" />
        <activity android:name=".controllers.CreateReportsActivity" />
        <activity android:name=".controllers.ViewReportActivity"></activity>
    </application>

</manifest>